{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noLib": false,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./typings",
    "strict": true,
    "target": "es6",
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": ["./src/"],
  "compileOnSave": true
}
